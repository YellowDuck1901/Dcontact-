
<head>

    <link rel="stylesheet" type="text/css" href="~/CSS/Form.css">
    <link rel="stylesheet" type="text/css" href="~/CSS/modalAccount.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

    <script src="https://kit.fontawesome.com/f94076876e.js" crossorigin="anonymous"></script>

</head>
<body>
    <script type="text/javascript" src="~/MyScript/Validation.js"></script>

    <div class="container">
        <div class="header">
            <h2>Login Your Account</h2>
        </div>
        <form id="form" class="form" action="@Url.Action("LoginForm", "Account" )">
            <div class="form-control">
                <input type="text" id="username" name="username"
                       placeholder="Username"
                       onfocus="this.placeholder=''"
                       onblur="this.placeholder='username'" />
                <small>Error message</small>
            </div>

            <div class="form-control">
                <input type="password" id="password" name="password"
                       placeholder="Password"
                       onfocus="this.placeholder=''"
                       onblur="this.placeholder='password'" />

                <small>Error message</small>
            </div>

            <button id="open" type="submit">Login</button>
        </form>
        <div class="SignUp">
            <span class="txt1">
                Don't have an account?
            </span>
            <a class="txt2" href="@Url.Action("Sigup", "Account" )">
                Sign Up
            </a>
        </div>
        <div class="Recover">
            <span class="txt1">
                Forgot Your Password?
            </span>
            <a class="txt2" href="@Url.Action("RecoverPassword", "Account" )">
                Recover Password
            </a>
        </div>
    </div>

    @{
        string msg = ViewBag.msg;
        string open = "";

        if (msg != null)
        {
            open = "open";
        }
    }
<div class="modal js-modal @open">
    <div class="modal-container">
        <div class="modal__header">
            <i class="fas fa-exclamation fa-2x"></i> <i class="fa fa-close"></i>
        </div>
        <div class="modal__contener">
            <p>@msg</p>
        </div>
    </div>
</div>
    <script>
        $(document).ready(function () {
            $(".modal").on('click', '.fa-close, button#close', function () {
                $('.modal').removeClass('open');
            });
            $("header").load("header.html");
        });
    </script>
    
</body>
