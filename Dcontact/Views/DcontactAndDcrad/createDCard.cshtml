                                    $('.input-text').show();
                                    $('.choosePositionText').show();
                                    $('.textColor').show();
                                }
                                else {
                                    $(this).attr('value', 'false');
                                    $('.input-text').hide();
                                    $('.choosePositionText').hide();
                                    $('.textColor').hide();
                                }
                            });

                        });


