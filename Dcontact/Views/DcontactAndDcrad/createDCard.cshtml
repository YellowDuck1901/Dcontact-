                                });
                                $(".cmnResult").empty();
                                var rdoChecked = $('input[type="radio"]:checked');
                                var rs = $('#textDesc').val();
                                if (rdoChecked.val() == "leftText") { //leftPosition
                                    $('.leftResult').html(rs);
                                } else if (rdoChecked.val() == "rightText") { //rightPosition
                                    $('.rightResult').html(rs);
                                } else if (rdoChecked.val() == "centerText") { //center
                                    $('.centerResult').html(rs);
                                } else { //bottom
                                    $('.bottomResult').html(rs);
                                }
                            });

                            //   toggleBackground
                            $("#toggleBg").on('change', function () {
                                if ($(this).is(':checked')) {
                                    $(this).attr('value', 'true');
                                    $('.upload').css('display', 'flex');
                                    $('.choose-color').show();
                                    $('.cropBackground').show();
                                }
                                else {
                                    $(this).attr('value', 'false');
                                    $('.upload').hide();
                                    $('.choose-color').hide();
                                    $('.cropBackground').hide();
                                }
                            });

                            // toogleAvt
                            $("#toggleAvt").on('change', function () {
                                if ($(this).is(':checked')) {
