        <div class="modal-container">
            <div class="modal-header">
                <i class="fas fa-crop-alt"></i>Crop & Upload Image
            </div>
            <div class="modal-body">
              <input type="file" name="fileAvt" id="fileAvt" accept="image/*">
              <label for="fileAvt" class="fileAvt__label"><i class="fa fa-image"></i> Choose a photo</label>
                <div class="avtShow" id="avtShow"></div>
