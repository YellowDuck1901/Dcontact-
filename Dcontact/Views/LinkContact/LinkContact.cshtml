<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.name | DContact</title>
    <link rel="stylesheet" href="~/CSS/LinkContact.css" />
    <link rel="stylesheet" href="~/CSS/modal.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://kit.fontawesome.com/a0a7c0f0d8.js" crossorigin="anonymous"></script>

</head>
<body>
    @{
        Bean.Dcontact dcontact = ViewBag.dcontact;
    }
    <nav class="container__right scrollbar-hidden">
        <div class="contener">
            <div class="card__contener" style="background-image: url(@dcontact.background);">
                <div class="card__contener--header">
                    <img src="@dcontact.avt" alt="avatar" />
                </div>
                <center style="font-family: cursive; margin: 0.75rem; font-size: 2vw;">&#64;@ViewBag.name</center>

                <div class="card__contener--body scrollbar-hidden">
                    <ul>
                        @{ foreach (Bean.Row row in dcontact.rows)
                            {
                                <li>
                                    <span class="report"><abbr title="Click here to report this link"><i class="fa fa-exclamation-triangle"></i></abbr></span>
                                    <div class="button"
                                         role="button"
                                         id="@row.ID"
                                         style="background-color: @row.color">
                                        <i class="@row.bullet"></i>
                                        <!-- Label -->
                                        <div class="card--item__text">
                                            <label style="font-family: '@row.font ;' ">@row.text</label>
                                        </div>
                                    </div>
                                </li>
                            }
                        }
                    </ul>
                </div>
                <div class="card__contener--footer">
                    <div class="logo--mini">
                        <img src="resource/logo/logo_full.svg" alt="" />
                    </div>
                </div>
            </div>
        </div>
    </nav>
    <!-- MODAL REPORT -->
    <div class="modalReport">
        <div class="modalContainer">
            <div class="modalHeader">
                <h3>REPORT</h3>
                <i class="fa fa-close"></i>
            </div>
            <div class="bodySendMail">
                <div class="modalBody">
                    <span>Email</span><input type="text" name="Email" id="mailReport"><i class="fa fa-exclamation-circle errorMail"></i><br>
                </div>
                <button class="btn-sendCode" type="submit">SEND CODE</button>
            </div>

            <div class="bodyVerify">
                <div class="modalBody">
                    <span>Code</span><input type="text" name="Code" id="codeVerify"><i class="fa fa-exclamation-circle errorCode"></i><br>
                </div>
                <div class="countdown"></div>
                <div class="footer-button">
                    <button class="btn-resendCode" type="submit">RESEND</button>
                    <button class="btn-verifyCode" type="submit">SUBMIT</button>

                </div>
            </div>

            <div class="reportDesc">
                <div class="modalBody">
                    <div class="descBody">
                        <div class="modalItem"><span class="descTitle">Username </span><span class="descContenet">tuyenmoc</span></div>
                        <div class="modalItem"><span class="descTitle">Name of Link </span><span class="descContenet">Facebook</span></div>
                        <div class="modalItem"><span class="descTitle">URL </span><span class="descContenet">fb.com/tuyen.danh.5249</span></div>
                        <div class="modalItem modalDesc">
                            <span class="descTitle">Description </span><textarea placeholder="Message to Report...." name="Description" id="txtDesc" cols="30" rows="10"></textarea>
                            <span class="errorReport">Please enter message to report <i class="fa fa-exclamation-circle"></i></span>
                        </div>
                    </div>
                </div>
                <button class="btn-sendReport" type="submit">REPORT</button>

            </div>
        </div>
    </div>
    <div class="modal js-modal" id="gate--code">
        <div class="modal-container">
            <div class="modal__header">
                <h2>Oder Confirm</h2> <i class="fa fa-close"></i>
            </div>
            <div class="modal__contener">
                <div class="modal__item item__spacebetween">
                    <span>Address: </span> <span class="confirm__value" id="address_value">Vinh long</span>
                </div>
                <div class="modal__item item__spacebetween">
                    <span>Phone: </span> <span class="confirm__value" id="phone_value">0774835261</span>
                </div>
                <div class="modal__item item__spacebetween">
                    <span>Number item:</span> <span class="confirm__value" id="amount_value">20</span>
                </div>
                <div class="modal__item item__spacebetween">
                    <span>Credit number: </span><span class="confirm__value" id="credit_value">4112121212121212</span>

                </div>
                <div class="modal__item item__spacebetween">
                    <span>Total: </span>
                    <strong id="total">120$</strong>
                </div>
            </div>
            <div class="modal_foo right__site">
                <button type="button" id="buy">Buy</button>
                <button type="button" id='close'>Close</button>
            </div>
        </div>
    </div>
    <script src="~/MyScript/LinkContact.js">
    </script>
    <script>
        $(".button").on('click', function () {
            $.post("/LinkContact/gate", { id: $(this).attr('id') }).done(function (data) {
                if (data) {
                    window.open("http://" + data, '_blank')
                } else {
                    $('#gate--code').addClass('open')
                }
            });
        })
    </script>
</body>
</html>
